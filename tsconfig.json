{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node", "jest", "reflect-metadata"],
    "strictNullChecks": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "lib": ["ESNext", "DOM"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
